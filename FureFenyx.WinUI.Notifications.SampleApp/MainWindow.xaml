<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FureFenyx.WinUI.Notifications.SampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:notifications="using:FireFenyx.WinUI.Notifications.Controls"
    xmlns:notifySvc="using:FireFenyx.WinUI.Notifications.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FureFenyx.WinUI.Notifications.SampleApp">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="Root">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
            <Button Content="Show Success" Click="Success_Click" />
            <Button Content="Show Warning" Click="Warning_Click" />
            <Button Content="Show Error" Click="Error_Click" />
            <Button Content="Show Progress" Click="Progress_Click" />
        </StackPanel>

        <!-- Notification Host -->
        <notifications:NotificationHost
            x:Name="Notifications"
            notifySvc:NotificationHostService.Queue="{x:Bind ViewModel.NotificationQueue, Mode=OneTime}" />


    </Grid>
</Window>
