<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light" Source="ms-appx:///FireFenyx.WinUI.Notifications/Themes/ThemeResources.Light.xaml" />
        <ResourceDictionary x:Key="Dark" Source="ms-appx:///FireFenyx.WinUI.Notifications/Themes/ThemeResources.Dark.xaml" />
    </ResourceDictionary.ThemeDictionaries>


    <!--  Default fallbacks  -->
    <SolidColorBrush x:Key="NotificationSolidBrush" Color="#333333" />
    <SolidColorBrush x:Key="NotificationForegroundBrush" Color="White" />

    <AcrylicBrush
        x:Key="NotificationAcrylicBrush"
        FallbackColor="#202020"
        TintColor="#202020"
        TintOpacity="0.6" />

    <SolidColorBrush x:Key="NotificationMicaBrush" Color="#202020" />

</ResourceDictionary>
