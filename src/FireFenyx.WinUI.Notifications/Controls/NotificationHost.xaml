<?xml version="1.0" encoding="utf-8"?>
<!--
  NotificationHost

  A WinUI UserControl used as a visual host for toast-like in-app notifications.
  Bind/attach an INotificationQueue via NotificationHostService.Queue to enable display.
-->
<UserControl
    x:Class="FireFenyx.WinUI.Notifications.Controls.NotificationHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FireFenyx.WinUI.Notifications.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Overlay"
          IsHitTestVisible="False">

        <Grid x:Name="ToastContainer"
              HorizontalAlignment="Center"
              VerticalAlignment="Bottom"
              Margin="0,0,0,24"
              Opacity="0"
              RenderTransformOrigin="0.5,1">

            <Grid.RenderTransform>
                <TranslateTransform Y="40"/>
            </Grid.RenderTransform>

            <InfoBar x:Name="ToastBar"
                     IsOpen="True"
                     IsClosable="True"
                     Width="420"
                     CornerRadius="6"
                     Background="{ThemeResource NotificationSolidBrush}"
                     Foreground="{ThemeResource NotificationForegroundBrush}"
                     IsHitTestVisible="True">

                <StackPanel>
                    <TextBlock x:Name="MessageText"
                               TextWrapping="Wrap" />

                    <ProgressBar x:Name="ProgressBar"
                                 Height="4"
                                 Margin="0,8,0,0"
                                 Visibility="Collapsed" />
                </StackPanel>
            </InfoBar>
        </Grid>
    </Grid>
</UserControl>
