<?xml version="1.0" encoding="utf-8"?>
<!--
  NotificationHost

  A WinUI UserControl used as a visual host for toast-like in-app notifications.
  Bind/attach an INotificationQueue via NotificationHostService.Queue to enable display.
-->
<UserControl
    x:Class="FireFenyx.WinUI.Notifications.Controls.NotificationHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FireFenyx.WinUI.Notifications.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Overlay"
          IsHitTestVisible="False">

        <StackPanel x:Name="Stack"
                    HorizontalAlignment="{x:Bind HostHorizontalAlignment, Mode=OneWay}"
                    VerticalAlignment="{x:Bind HostVerticalAlignment, Mode=OneWay}"
                    Margin="{x:Bind HostMargin, Mode=OneWay}"
                    Spacing="{x:Bind HostSpacing, Mode=OneWay}" />
    </Grid>
</UserControl>
